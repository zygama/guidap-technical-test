{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": { "node": { "extensions": [".ts"] } }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
         "indent": ["error", 4],
        "import/prefer-default-export": 0,
        "comma-dangle": ["error", "never"],
        "no-console": 0,
        "import/extensions": 0,
        "linebreak-style": 0,
        "no-plusplus": 0,
        "no-await-in-loop": 0,
        "max-len": ["error", { "code": 120 }],
        "no-restricted-syntax": 0
    }
}
